extends layout

block scripts
    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/main.js')

block content
  h1= title
  p(style="margin:30px") This is a demo page to illustrate the charts generation function...

  .group
    h3 Treemap chart:
    .left-thubmnail
      img(src="/icons/treemap.png", width="120px", height="120px")
    .right-box
      form(id="Treemap_Form", action="/create", method="post")
        p
          label(for="json") json-data:
            textarea(id="Treemap_JsonData", name="json", rows="10" ,cols="80")
        //load
        input(id="load_Treemap_Json", type="button", value="Load json first", style="margin-right: 10px;")
        //post
        input(id="submit_Treemap_Form", type="button", value="Ceate chart then", style="margin-right: 10px;")
        img(id="Treemap_loading", src="/stylesheets/loading.gif", width="22px;" height="22px", style="vertical-align:middle; display:none;")
    //response
    #Treemap_result.small-space

